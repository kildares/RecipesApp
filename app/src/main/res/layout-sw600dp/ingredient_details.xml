<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/cl_ingredient_detail"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ingredient_step"
    >

    <TextView
        android:id="@+id/tv_ingredient_title"
        android:text="title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        style="@style/ingredient_step"
        />

    <TextView
        android:id="@+id/tv_ingredient_measure"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/ingredient_step"
        android:textSize="@dimen/text_size_small"
        />

    <TextView
        android:id="@+id/tv_ingredient_quantity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_ingredient_measure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/ingredient_step"
        android:textSize="@dimen/text_size_small"
        />

</android.support.constraint.ConstraintLayout>
